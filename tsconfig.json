{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "declaration": true
  }
}
